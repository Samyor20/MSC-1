//Read the current directory and display the name of the files, no of files in current directory

#include<stdio.h>
#include<dirent.h>

int main() {
	DIR *d;
	struct dirent *d;
	int file_count = 0;

	d=opendir(".");

if(d) {
	printf("files in the current directory: \n");
while((dir = readdir) != NULL)) {
	if((dir->d_name[0] != ".")) {
	printf("%s\n",dir->d_name);
	file_count ++;

}

}
}
