#include<stdio.h>
#include<stdio.h>
#include<stdlib.h>
#include<sys/stat.h>
#include<wait.h>

  void handle_sigint (int sig) { 
  printf("Child recieved SIGINT signal. \n");
}

  void handle_sighup (int sig) {
  printf("Child recieved SIGHUP signal. \n");
  }

  void handle_sigquit (int sig) {
  printf("My papa has killed me!. \n");
  exit(0);
  }

int main() {

pid_t pid = fork();

if(pid < 0){
  printf("fork failed!");
  exit(1);
}
if(pid == 0) {
  signal (SIGHUP, handle_sighup);
  signal (SIGINT, handle_sigint);
  signal (SIGQUIT, handle_sigquit);

while(1) {
  pause();
} else {
for(int i = 0; i < 5; i++){
  sleep(3);
  if( i % 2 == 0) {
    kill(pid, SIGHUP);
  } else {
    kill(pid, SIGINT);
      }
    }
  }
  kill(pid, SIGQUIT)
  wait(NULL);
}
 return 0;
}
