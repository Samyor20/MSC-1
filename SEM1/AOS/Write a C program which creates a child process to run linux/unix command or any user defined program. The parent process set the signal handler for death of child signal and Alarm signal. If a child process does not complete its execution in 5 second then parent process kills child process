#include<stdio.h>
#include<unistd.h>
#include<stdlib.h>
#include<signal.h>
#include<sys/wait.h>

pid_t child_pid = -1;

void handle_sigchld(int sig) {
  int status;
  waitpid(child_pid, &status,WNOHANG)
  printf("child process terminated/n");
  exit(0);
}

void handle_sigalrm(int sig) {
  if(child_pid > 0) {
    printf("child process did not finish in 5 seconds, killing it!");
    kill(child_pid,SIGKILL);
    waitpid(child_pid,NULL,0);
    exit(1);
  }
}

int main() {
signal(SIGCHLD, handle_sigchld);
signal(SIGALRM, handle_sigalrm);

child_pid = fork();

if(child_pid == 0) {
  while(1) {
    printf("child is running.....");
    sleep(1);
  }
} else if(child_pid > 0) {
    sleep(5);
    pause();
} else {
  perror("fork failed!")
  return 1;
}
return 0;
}
