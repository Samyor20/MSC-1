#include<stdio.h>
#include<stdlib.h>
#include<sys/stat.h>
#include<errno.h>

int main( int argc , char *argv[]) 
{
if(argc != 2) {
fprintf(stderr, "usage:%s </filename>",argv[0]);
return 1;
}

const char *file_name = argv[1];
struct stat file_st;

if(stat(file_name,&file_st) == 0) 
{
printf("The File %s exists in the current directory \n",file_name);
} else {
  if(errno == ENONET) {
printf("The file %s does not exists in this directory \n",file_name);
} else {
perror("Error geting the file status. ");
}
return (0);
}
}
